<h1>Add a new Pin!</h1>

<% if !@errors.nil? %>
	<div class="errors">
		<label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved:</label>
			<ul>
				<% @errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
	</div>
<% end %>

<%= form_for(@pin) do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>

	<%= f.label :text %>
	<%= f.text_field :text, class: 'form-control', placeholder: 'Resource Description' %>
	
	<%= f.label :slug %>
	<%= f.text_field :slug, class: 'form-control', placeholder: 'URL Display Name' %>
	

	<%= f.label :url %>
	<%= f.text_field :url, class: 'form-control' %>
<div class="form-group">
	<%= f.label :category %>
	<%= f.collection_select(:category_id, Category.all, :id, :name) %>
</div>
	<%= f.submit :submit, class: 'btn btn-default' %>
	
<% end %>

<div class="back">
<a href="/">
<i class="fa fa-arrow-left"></i>  Back to Home
</a>
</div>
